            let firstName =  "vincent" ;
            let lastName = " Tsai" ;
            let space = " " ; 
            fullName = firstName + space + lastName;
            console.log(fullName);
            console.log(`Dear ${fullName}, Happy graduation!`);
            console.log("Dear " + fullName + ", Happy graduation!" );
            /* `中間可以使用${} 在{}中直接加入變數`
            否則要使用"...."+ 變數 + "...." 的方式*/

//Bool 判斷
let hadShoes = true ; 
let hadBag = false ;
console.log(hadShoes && hadBag); // && == 且
console.log(hadShoes || hadBag); // || == 或

console.log();

let height1 = 170;
let hetght2 = 160;
console.log(height1 > hetght2);

/* == & === 
== ->兩邊相等 如果資料型態不同會強制轉成一樣的再比較
=== ->觀察兩邊資料型態有無相同 如果不相同質些產生 false */

let hetght3 = "160";
console.log(height1 === hetght3);
console.log(height1 == hetght3);

