let number = 7 ;
    if(number > 10 ){
        console.log("大於10");
    }else if(number < 3){
        console.log("小於3");
    }else if(number > 5){
        console.log("大於5");
    }

console.log();

    if(number > 10 ) console.log("大於10");
    if(number < 3)   console.log("小於3");
    if(number > 5)   console.log("大於5");

console.log();

switch(number){

    case'7':
        console.log('string 7');
    break;

    case 7 :
        console.log('number 7');
    break;

    case'number':
        console.log('string number');
    break;

    default:
        console.log('string default');

}
/* switch指嚴格比對
會比較()內的物件是否相符 並進行相對的輸出*/

console.log();

let number2 = 1
while(number2 <= 10){
    console.log(number2);
    number2++; 
    //需要記得設入停止條件 如果要停止程式 ctrl + c
}

console.log();

do{
    console.log(number2);
    number2++;
}while( number2 <= 10)
